<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:padding="20dp"
        android:text="@string/sucursales"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="333dp"
            android:layout_height="173dp"
            android:orientation="horizontal"
            android:paddingTop="60dp">

            <TextView
                android:id="@+id/Sedesuba"
                android:layout_width="201dp"
                android:layout_height="120dp"
                android:layout_gravity="top"
                android:paddingTop="10dp"
                android:text="@string/sede_suba"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonSedeSuba"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Ver en Mapa"
                android:textColor="#FBFBFB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="116dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/sedechapinero"
                android:layout_width="201dp"
                android:layout_height="120dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="@string/sede_Chapinero"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonSedeChapinero"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Ver en Mapa"
                android:textColor="#FBFBFB" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="98dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sedechapinero2"
                android:layout_width="169dp"
                android:layout_height="120dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="@string/sede_Fontibon"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonSedeFontibon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Ver en Mapa"
                android:textColor="#FBFBFB" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="373dp"
            android:layout_gravity="bottom"
            android:padding="30dp" />
    </LinearLayout>


</FrameLayout>